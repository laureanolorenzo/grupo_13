<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

<body>


    <%- include('./partials/headerLoggedIn') %>

    <main class="main-perfil">

        <section class="section-datos-perfil">
            <div class="user-profile">
                <img src="images/users/<%= usuarioActual.foto %>" alt="Foto de perfil"> 
                <h1>¡Hola, <%= usuarioActual.nombre %>!</h1>  
            </div>
            <div class="user-profile">
                <h2>Información personal</h2>
                <ul>
                    <li>Nombre de usuario: <%= usuarioActual.nombre %></li>
                    <li>Correo electrónico: <%= usuarioActual.email %></li>
                    <li>Rol: 
                        <% for (let i=0; i<rol.length; i++) { %>
                            <% if (rol[i].id == usuarioActual.id_rol) { %>
                                <%= rol[i].tipo %>
                            <% } %>
                        <% } %>
                    </li>
                </ul>
            </div>
        </section>

        <form action="/editar_usuario" class="field">
            <button class="button" type="submit">Editar Usuario</button>
        </form>

    </main>
    
    <%- include('./partials/footer') %>
</body>
</html>