<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

<body>
  <% if (typeof locals.userLoggedIn === 'undefined') { %>
    <%- include('./partials/header') %>
  <% } else { %>
    <%- include('./partials/headerLoggedIn') %>
  <% } %>

    <main class="main-categorias">
      <div class="wrapper">

      <div class="seccionCategorias">
        <div class="seccionIntermedia">
          <h1>Categorías</h1>
          <div class="dropdown">
            <button class="dropbtn"><use>Seleccionar</use></button>
            <div class="dropdown-content">
              <ul class="cat-dropdown">
              <% if (typeof categories !== 'undefined') { %>
                <% for (const categ of categories) {%>
                    <li><a href="/categorias/<%= categ.categoria %>" category="estrenos" id="seleccion-categoria"><%= categ.titulo %></a></li>
                    <% } %>

                    <% } %>
              </ul>
            </div>
          </div>
          <a href="/categorias" style="color: azure;">ver todas</a>
        </div>

        <input type="text" class="Buscar" placeholder="Buscar Película">
      </div>

      <section class="categorias">
        <% if (datos){ %>
          <h3 class="titulo-pelicula titulo-categoria"></h3>
          <div class="alineacion-movil">
            <% for (const peli of datos) {%>

              <div class="contenido-pelicula">
                <h3 class="titulo-pelicula-categorias"><%= peli.titulo %></h3>
                <div class="contenido">

                  <img class="poster" src="<%= peli.local?`/images/movies/${peli.poster}`:peli.poster %>">
                  <ul class="detalle-pelicula">
                      <li class="linea" >Clasificación: <%= peli.clasificacion %></li>
                      <li class="linea" >Duración: <%= peli.duracion %></li>
                      <li class="linea" >Reparto: <%= peli.reparto %></li>
                      <li class="linea" >Director: <%= peli.director %></li>
                      <!-- <li class="linea" >Cast: <%= peli.reparto %></li>
                      <li class="linea" >Origen: <%= peli.origen %></li> -->
                  </ul>
                </div>
                <a href="/detalle_producto/<%= peli.id %>" class="button" > VER </a>
              </div>

            <%}%>
          </div>
       <% } %>
       <% if ((datos.length == 0)) { %>
        <!-- Pelicula por default -->
          <div class="alineacion-movil">
              <div class="contenido-pelicula">
                <h3 class="titulo-pelicula-categoria">Oppenheimer (Default)</h3>
                  <div class="contenido">
                    <img class="poster" src="/images/movies/Oppenheimer-1704895653762.jpg">
                    <ul>
                        <li class="linea" >Calificación: Apta para mayores de 13 años</li>
                        <li class="linea" >Duración: 158 minutos</li>
                        <li class="linea" >Género: Histórica , Biográfica</li>
                        <li class="linea" >Director: Ridley Scott</li>
                        <li class="linea" >Actores: Joaquin Phoenix, Vanessa Kirby, Ludivine Sagnier</li>
                        <li class="linea" >Origen: Reino Unido, Estados Unidos</li>
                    </ul>
                  </div>
                    <a href="/" class="button" > VER </a>
                  </div>
                    <div class="trailer">
                      <iframe width="560" height="315" src="https://www.youtube.com/watch?v=NjMJwewmcfA" frameborder="0" allowfullscreen></iframe>
                    </div>
                  </div>
              </div>
        <% } %>
    </div>

  </main>
  <%- include('./partials/footer') %>
  <script src="/js/categorias-script.js"></script>
</body>

</html>