<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
    <body class="kiosco-body">

        <% if (typeof user === 'undefined') { %>
            <%- include('./partials/header') %>
        <% } else { %>
            <%- include('./partials/headerLoggedIn') %>
        <% } %>

        <main>
            <div class="wrapper">
                <form action="/buscar_producto" method="POST" class="form-buscar form-buscar-producto">
                    <label for="barra_busqueda" class="label-buscar">
                        <input class="input-buscar" type="text" name="barra_busqueda" id="barra_busqueda" placeholder="Ingrese el nombre de la película">
                    </label>
                    <div class="div-buscar">
                        <button class="boton-buscar" type="submit">Buscar</button>
                    </div>
                </form>

                <h1 class="titulo-productos">Todas las películas</h1>

                <ul class="lista-productos">
                    <% for (let i= 0; i<productos.length; i++) { %>
                        <li class="item-productos">
                            <a href="/detalle_producto/<%= productos[i].id %>">
                                <img src="<%= productos[i].local?`/images/movies/${productos[i].poster}`:productos[i].poster %>" alt="póster de la película">
                                <span class="ellipsis">
                                    <p class="titulo_movie"><%= productos[i].titulo %></p>
                                </span>
                                <div class="detalle_card_producto">
                                    <p class="anio_movie"><%= productos[i].anio%></p>
                                    <p class="duracion_movie"><%= productos[i].duracion%> min</p>
                                </div>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </main>

        <%- include('./partials/footer') %>

    </body>
</html>