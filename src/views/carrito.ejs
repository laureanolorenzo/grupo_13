<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

<body class="carrito-body">

    <% if (typeof locals.userLoggedIn === 'undefined') { %>
        <%- include('./partials/header') %>
    <% } else { %>
        <%- include('./partials/headerLoggedIn') %>
    <% } %>
    
    <main class="main-carrito">
        <div class="wrapper">
            <h2 class="titulo-login">Carrito</h2>
            <section class="division-carrito">
                <h3>Productos seleccionados</h3>
                <div class="lista-carrito">
                    <div class="producto-carrito">
                        <p>Pochoclos</p>
                        <img src="/images/pochoclos.png" alt="Pochoclos">
                        <p>$1000</p>
                        <button class="button">Eliminar</button>
                    </div>
                    <div class="producto-carrito">
                        <p>Gran Torino</p>
                        <img src="/images/gran-torino.png" alt="Poster Gran Torino">
                        <p>$2500</p>
                        <button class="button">Eliminar</button>
                    </div>
                </div>
            </section>

            <section class="division-carrito">
                <h3>Formas de pago</h3>
                <div class="lista-carrito">
                    <div class="producto-carrito">
                        <p>Débito o crédito</p>
                        <div class="logos-carrito">
                            <a href="">
                                <i class="fa-brands fa-cc-visa"></i>
                            </a>
                            <a href="">
                                <i class="fa-brands fa-cc-mastercard"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <p class="total-pagar">Total a pagar: $3500</p>
            </section>

            <section class="boton-carrito">
                <a href="/ir_a_pagar"><button class="button">Ir a pagar</button></a>
            </section>
        </div>
    </main>

    <%- include('./partials/footer') %>

</body>
</html>